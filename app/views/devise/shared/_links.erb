<div class="btn-group">
<%- if controller_name != 'sessions' %>
  <%= link_to "Войти", new_session_path(resource_name), :class=>'btn btn-primary' %>&nbsp;
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Регистрация", new_registration_path(resource_name), :class=>'btn btn-primary' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name), :class=>'btn btn-primary' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не отправлять подтверждение регистрации?", new_confirmation_path(resource_name), :class=>'btn btn-primary' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не отправлять подтверждение восстановления?", new_unlock_path(resource_name), :class=>'btn btn-primary' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Авторизация #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class=>'btn btn-primary' %>
  <% end -%>
<% end -%>
</div>