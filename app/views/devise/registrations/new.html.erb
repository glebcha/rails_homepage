<div class="container">
  <h2>Регистрация</h2>
  <div class="col-md-5 row">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :placeholder => 'Пароль', :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, :placeholder => 'Подтверждение пароля', :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Зарегистрировать",:class=>'btn btn-default' %>
    </div>
  <% end %>
  </div>
  <div class="col-md-12 row">
    <%= render "devise/shared/links" %>
  </div>
</div>