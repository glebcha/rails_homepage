<div class="container">
<div class="col-md-5 row">
  <h2>Вход</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :placeholder => "Пароль", :class => "form-control" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
    <% end -%>
    <div class="btn-group">
    	<%= f.submit "Войти", :class => "btn btn-default" %>
    	<%- if devise_mapping.omniauthable? %>
  		<%- resource_class.omniauth_providers.each do |provider| %>
    		<%= link_to "Авторизация #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class=>'btn btn-default' %>
  		<% end -%>
	<% end -%>
    </div>
  <% end %>
</div>
</div>